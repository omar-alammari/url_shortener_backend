{
  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "Launch Program (TS)",
      "skipFiles": ["<node_internals>/**"],
      "program": "${workspaceFolder}/src/server.ts",
      "preLaunchTask": "tsc: build - tsconfig.json", // يبني المشروع قبل التشغيل
      "outFiles": ["${workspaceFolder}/dist/**/*.js"], // المسار بعد البناء
      "sourceMaps": true, // دعم الـ Source Maps لتصحيح الـ TS مباشرة
      "runtimeArgs": ["--nolazy", "-r", "ts-node/register"], // دعم TS مباشرة
      "console": "integratedTerminal"
    }
  ]
}

